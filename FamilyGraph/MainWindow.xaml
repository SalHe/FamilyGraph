<Window x:Class="FamilyGraph.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FamilyGraph"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:viewModel="clr-namespace:FamilyGraph.ViewModel"
        xmlns:internal="clr-namespace:FamilyGraph.Internal"
        xmlns:converter="clr-namespace:FamilyGraph.Converter"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="500" Width="505">

    <Window.DataContext>
        <viewModel:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <converter:GenderConverter x:Key="GenderConverter" />
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="245" />
        </Grid.ColumnDefinitions>

        <!-- 展示家族关系 -->
        <TreeView
            x:Name="TreeViewFamily"
            ItemsSource="{Binding FamilyTreeNodes}">
            <TreeView.ItemContainerStyle>
                <Style TargetType="TreeViewItem">
                    <Setter Property="IsExpanded" Value="True" />
                </Style>
            </TreeView.ItemContainerStyle>
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate DataType="{x:Type viewModel:FamilyTreeNode}"
                                          ItemsSource="{Binding Path=Children}">
                    <StackPanel Margin="10 5" Orientation="Horizontal" VerticalAlignment="Center">
                        <Image Width="20" Height="20" Stretch="UniformToFill"
                               Style="{StaticResource ImageGenderSelector}" />
                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center" />
                        <Image Width="20" Height="20" Stretch="UniformToFill"
                               Style="{StaticResource ImageSpouseGenderSelector}" />
                        <TextBlock Text="{Binding SpouseName}" VerticalAlignment="Center" />
                    </StackPanel>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>

        <StackPanel Grid.Column="1" Orientation="Vertical" Margin="5 0 0 0">

            <!-- 节点编辑 -->
            <GroupBox Header="继承关系">
                <Grid Width="215" HorizontalAlignment="Left" Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Content="添加孩子" Command="{Binding AddEmptyChild}"
                            CommandParameter="{Binding ElementName=TreeViewFamily, Path=SelectedItem}"/>
                    <Button Grid.Column="1" Content="移除当前节点" Command="{Binding RemoveCurrentNode}"
                            CommandParameter="{Binding ElementName=TreeViewFamily, Path=SelectedItem}"/>
                </Grid>
            </GroupBox>

            <!-- 展示信息编辑 -->
            <GroupBox Header="编辑节点信息">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="32" />
                        <RowDefinition Height="32" />
                        <RowDefinition Height="32" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40" />
                        <ColumnDefinition Width="180" />
                    </Grid.ColumnDefinitions>

                    <Grid.Resources>
                        <ObjectDataProvider x:Key="GenderNames" ObjectType="{x:Type sys:Enum}" MethodName="GetNames">
                            <ObjectDataProvider.MethodParameters>
                                <x:Type TypeName="internal:Gender" />
                            </ObjectDataProvider.MethodParameters>
                        </ObjectDataProvider>
                    </Grid.Resources>

                    <Grid.DataContext>
                        <Binding ElementName="TreeViewFamily" Path="SelectedItem" />
                    </Grid.DataContext>

                    <!-- 姓名 -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="姓名:" VerticalAlignment="Center"
                               HorizontalAlignment="Right"
                               Margin="0 0 6 0" />
                    <TextBox Grid.Row="0" Grid.Column="1" Margin="0 4" Text="{Binding Name}" />

                    <!-- 配偶 -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="配偶:" VerticalAlignment="Center"
                               HorizontalAlignment="Right"
                               Margin="0 0 6 0" />
                    <TextBox Grid.Row="1" Grid.Column="1" Margin="0 4" Text="{Binding SpouseName}" />

                    <!-- 性别 -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="性别:" VerticalAlignment="Center"
                               HorizontalAlignment="Right"
                               Margin="0 0 6 0" />
                    <ComboBox Grid.Row="2" Grid.Column="1" Margin="0 4"
                              ItemsSource="{Binding Source={StaticResource GenderNames}}"
                              SelectedValue="{Binding Path=Type, Converter={StaticResource GenderConverter}, Mode=TwoWay}" />
                </Grid>
            </GroupBox>


        </StackPanel>


    </Grid>
</Window>